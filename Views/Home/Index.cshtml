@{
    ViewData["Title"] = "Login and regestration";
}
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="ru" data-bs-theme="light">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Магазин</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <div class="auth-container">
        <div class="auth-left">
            <img src="https://static.flexdog.pl/flexdog-3/products/images/e7beb6b5-3ab3-4ca8-a963-1cb54db7bd01_instyle_ai.png?width=828&quality=40" class="floating-item" style="top:60%; left:20%; animation-delay:0s;">
            <img src="https://www.thenextsole.com/storage/images/568614-W2GN3-8071.png" class="floating-item" style="top:70%; left:60%; animation-delay:3s;">
            <img src="https://i1.t4s.cz/products/1203a342-500/asics-gel-terrain-702504-1203a342-500.png" class="floating-item" style="top:70%; left:40%; animation-delay:6s;">
            <img src="https://n-hype.com/cdn/shop/files/Rick_Owens_Leather_High_Top_Sneakers_Showroom_NHype_Lodz_Polska_3.png?v=1719306141&width=1080" class="floating-item" style="top:60%; left:5%; animation-delay:9s;">
        </div> 
        <div class="auth-right">
            <h1 class="title">SWAGардове Небо</h1>
            <div class="login-box">
                <form method="post" action="/Account/Login">
                    <div class="mb-3">
                        <label for="email" class="form-label">Email</label>
                        <input type="email" id="email" name="Email" class="form-control" placeholder="Enter email" required>
                    </div>
                    <div class="mb-3">
                        <label for="password" class="form-label">Пароль</label>
                        <input type="password" id="password" name="Password" class="form-control" placeholder="Enter password" required>
                    </div>
                    <button type="submit" class="btn btn-primary btn-login">Sign in</button>
                    <div class="register-link">
                        <a href="/Account/Register">Sign up</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</body>
