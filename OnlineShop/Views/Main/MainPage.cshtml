@{
    ViewData["Title"] = "Главная - Магазин";
    Layout = null; // если не используешь общий _Layout
}

<!DOCTYPE html>
<html lang="ru" data-bs-theme="light">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">

    <style>
        body {
            margin: 0;
            padding: 0;
            font-family: Arial, sans-serif;
            background-color: #f8f9fa;
        }

        .navbar {
            padding: 1rem 2rem;
            background-color: #343a40;
        }

            .navbar a {
                color: #fff;
                text-decoration: none;
            }

            .navbar .user-icon {
                font-size: 1.5rem;
            }

        .products {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(220px, 1fr));
            gap: 20px;
            padding: 2rem;
        }

        .card img {
            height: 200px;
            object-fit: cover;
        }

        .card-title {
            font-size: 1.1rem;
            font-weight: bold;
        }
    </style>
</head>
<body>

    <nav class="navbar d-flex justify-content-between align-items-center">
        <a href="/" class="text-white fs-4">SWAGардове Небо</a>

        <div class="d-flex align-items-center gap-3">
            <a href="/Cart/Index" class="text-white position-relative">
                <i class="bi bi-cart" style="font-size: 1.8rem;"></i>
                <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">
                    0
                </span>
            </a>
            <!-- Иконка пользователя -->
            <a href="/Account/Login" class="user-icon text-white">
                <i class="bi bi-person-circle" style="font-size: 1.8rem;"></i>
            </a>
        </div>
    </nav>


    <div class="products">
        <div class="card">
            <img src="https://static.flexdog.pl/flexdog-3/products/images/e7beb6b5-3ab3-4ca8-a963-1cb54db7bd01_instyle_ai.png" class="card-img-top" alt="1">
            <div class="card-body">
                <h5 class="card-title">Air Jordan 4 Retro</h5>
                <p class="card-text"></p>
                <p class="card-text fw-bold">200$</p>
                <a href="#" class="btn btn-primary w-100">Купить</a>
                <p></p>
                <a asp-controller="Cart" asp-action="Add" class="btn btn-primary w-100">
                    В корзину
                </a>
            </div>
        </div>

        <div class="card">
            <img src="https://www.thenextsole.com/storage/images/568614-W2GN3-8071.png"
                 class="card-img-top product-img"
                 alt="Balenciaga Track 2">
            <div class="card-body">
                <h5 class="card-title">Balenciaga Track 2</h5>
                <p class="card-text"></p>
                <p class="card-text fw-bold">300$</p>
                <a href="#" class="btn btn-primary w-100">Купить</a>
                <p></p>
                <a asp-controller="Cart" asp-action="Add"  class="btn btn-primary w-100">
                    В корзину
                </a>
            </div>
        </div>

        <div class="card">
            <img src="https://slamdunk.shop/wp-content/uploads/2024/10/gel-terrain-white-lake-grey-1203a342-100.webp"
                 class="card-img-top product-img"
                 alt="Asics Gel-Terrain">
            <div class="card-body">
                <h5 class="card-title">Asics Gel-Terrain</h5>
                <p class="card-text"></p>
                <p class="card-text fw-bold">300$</p>
                <a href="#" class="btn btn-primary w-100">Купить</a>
                <p></p>
                <a asp-controller="Cart" asp-action="Add" class="btn btn-primary w-100">
                    В корзину
                </a>
            </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
</body>
</html>
